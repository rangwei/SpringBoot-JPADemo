<mvc:View controllerName="com.myorg.myapp1.controller.MainView" displayBlock="true" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<List headerText="{i18n>People}" class="sapUiResponsiveMargin" width="auto" items="{people>/}">
						<items>
							<ObjectListItem title="{people>name}">
								<attributes>
									<ObjectAttribute text="{people>address/street}" />
								</attributes>
							</ObjectListItem>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View> 
